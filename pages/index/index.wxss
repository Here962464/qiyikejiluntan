.top_tab{
  background: #fff;
  color: #aaa;
  font-size: 28rpx;
  border-bottom: 2rpx solid #bebebe;
  /* box-shadow: 0 1px 1px #bebebe; */
  /* margin: 0 0 8rpx 0; */
  display: flex;
  align-content: center;
  align-items: center;
  justify-content: center;
}
.top_item{
  flex:30%;
  text-align: center;
  padding: 26rpx 0; 
}
.item_icon{
	width: 100%;
	height: 300rpx;
}
.sv{
  /* background-color: #fff; */
}
.zhanwei{
  height: 10rpx;
  width: 100%;
  background-color:#eee;
}
.con{
background:#ffffff;
/* border-top:1px solid #eee; */
border-bottom:1px solid #eee;
box-shadow:0 2px 5px #eeeeee;

}
.con_title{
  padding: 0 20rpx;
}
.con_title image{
width:45rpx;
height:45rpx;
border-radius:45rpx;
top:10rpx;
vertical-align:middle;
}
.con_title text{
display:inline-block;
height:40rpx;
line-height:40rpx;
vertical-align:middle;
margin:0 0 0 15rpx;
color:#a0acac;
font-size:26rpx;
}
.con_content{
  padding:10rpx 0 0 0;
}
.question text{
padding: 0 20rpx;
font-size:28rpx;
font-weight:600px;
line-height:40rpx;
text-space:5rpx;
}
.answer_body{
padding:10rpx 20rpx;
font-size:24rpx;
line-height:28rpx;
color:#5b5b5b;
}
.answer-actions{
width:690rpx;
padding:10rpx 0 0;
color:#a0acac;
}
.answer-actions view{
display:inline-block;
vertical-align:text-bottom;
padding:0 10rpx 0 0;
font-size:24rpx
}
.active{
    color:#353535;
    border-bottom: 2rpx solid #353535;
}
